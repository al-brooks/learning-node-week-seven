<html>
    <head>
    <link rel="stylesheet" href="/css/movies-styles.css" />
    </head>
    <body>
        <h1>Movies Website Assignment</h1>
        <main>
            <section>
                {{#movies}}
                    <div class = "movieList">
                        <span>{{name}}</span>
                        <img src = "{{posterUrl}}" />
                        <form method="POST" action="/movies/delete">
                            <input type="hidden" value="{{id}}" name="id" />
                            <button>remove</button>
                        </form>
                    </div>
                {{/movies}}
            </section>
            <section>
                <h2>Add a Movie!</h2>
                <form method="POST" action="/movies/create">
                    <input type="text" placeholder ="Movie Title" name = "name" />
                    <input type="text" placeholder ="Movie Details" name = "details" />
                    <input type="text" placeholder ="Movie Genre" name = "genre" />
                    <input type="text" placeholder ="Movie Poster URL" name = "posterUrl" />
                    <button>Add</button>
                </form>
            </section>
        </main>
    </body>
</html>